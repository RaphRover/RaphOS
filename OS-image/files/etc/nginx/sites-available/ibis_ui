server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /opt/ibis_ui;

    index index.html;

    server_name _;

    location / {
        # First attempt to serve request as file, then
        # as directory, then fall back to displaying a 404.
        try_files $uri $uri/ =404;
    }

    location = /files {
        return 301 /files/;
    }

    location /files/ {
        alias /home/ibis/external_disk_mountpoint/;
        autoindex on;
    }
}
